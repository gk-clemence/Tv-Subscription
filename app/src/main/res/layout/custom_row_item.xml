<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/light_grey"
    app:cardCornerRadius="10sp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50sp"
            android:id="@+id/profileCardImage"
            android:layout_margin="4sp">
            <ImageView
                android:layout_width="110sp"
                android:id="@+id/profilePicId"
                android:layout_height="110sp"
                android:src="@drawable/profile_picture"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_toRightOf="@+id/profileCardImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12sp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/studentName"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:text="Student's Names"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/studentdepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textSize="12sp"
                        android:text="INS"/>
                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/studentAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="serif"
                        android:textSize="12sp"
                        android:text="Student's Age"/>
                </TableRow>

            </TableLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>